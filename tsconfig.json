{
    "compilerOptions": {
      "declaration": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "declarationDir": "dist",
      "noImplicitAny": true,
      "noFallthroughCasesInSwitch": true,
      "skipDefaultLibCheck": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "lib": ["es2020", "dom"],
      "target": "es2020"
    },
    "exclude": [
      "node_modules",
      "examples",
      "dist"
    ]
  }